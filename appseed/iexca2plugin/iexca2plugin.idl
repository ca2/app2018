import "ocidl.idl";

[
  uuid(CA211984-1984-1977-B38E-4918E3DBBAB3),
  version(1.0),
  helpstring("ca2 ActiveX Plugin")
]

library iexca2
{
    interface iexca2_control_interface;
    dispinterface iexca2_events;

    importlib("stdole2.tlb");
   
    //const int DISPID_PlayEvent  = 100;
    //const int DISPID_PauseEvent = 101;
    //const int DISPID_StopEvent  = 102;

    [
      uuid(CA211984-1984-1977-8A0D-FABFDA616C0B),
      helpstring("Event interface ActiveX control")
    ]
    dispinterface iexca2_events_dispatch
    {
        properties:
        methods:
    };

    [
      odl,
      uuid(CA211984-1984-1977-95A6-F1FCA18971F1),
      helpstring("ca2 ActiveX Control"),
      dual,
      oleautomation
    ]
    interface iexca2_control_interface : IDispatch
    {
        [propput, helpstring("Set test String")]
        HRESULT TestString([in] BSTR str);

        [propget, helpstring("Get test string")]
        HRESULT TestString([out, retval] BSTR* str);

        [helpstring("Show/hide ActiveX window")]
        HRESULT SetVisible([in] VARIANT_BOOL isShow);
    };

    [
      uuid(CA211984-1984-1977-A861-F8AA2A7AEE4B),
      helpstring("ca2 ActiveX Plugin"),
      control
    ]
    coclass iexca2_plugin
    {
        [default] interface iexca2_control_interface;
    };
};
